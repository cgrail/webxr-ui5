<core:FragmentDefinition xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1"
						 xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog id="deleteConfirmationDialog" title="{delete>/title}" class="sapUiContentPadding" state="Warning" ariaLabelledBy="deleteText">
		<content>
			<VBox>
				<Text id="deleteText" text="{delete>/text}"/>
				<Text id="undeletableText" text="{delete>/undeletableText}"/>
			</VBox>
		</content>
		<beginButton>
			<Button text="{i18n>DELETE}" press="onDelete"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>CANCEL}" press="onCancel"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>
