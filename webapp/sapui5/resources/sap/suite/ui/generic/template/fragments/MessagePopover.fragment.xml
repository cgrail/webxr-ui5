<core:FragmentDefinition
		xmlns="sap.m"
		xmlns:core="sap.ui.core">
	<MessagePopover items="{msg>/}" itemSelect="itemSelected" activeTitlePress="titlePressed" beforeOpen="beforeOpen" >
		<MessageItem description="{msg>description}" type="{msg>type}" title="{msg>message}"
					subtitle="{msg>additionalText}" longtextUrl="{msg>descriptionUrl}"
					activeTitle="{path: 'msg>controlIds', formatter: '.isPositionable'}" />
	</MessagePopover>
</core:FragmentDefinition>